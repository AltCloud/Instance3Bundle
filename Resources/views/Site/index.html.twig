{% extends 'ACInst3Bundle::admin_layout.html.twig' %}

{% block content_in %}
<h1>Site list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Url</th>
            <th>Deftemp</th>
            <th>Entry Node</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_site_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.url }}</td>
            <td>{{ entity.deftemp }}</td>
            <td>{% if entity.entrynode %}
        		{{ entity.entrynode.title }}
        	{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_site_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_site_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_site_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
